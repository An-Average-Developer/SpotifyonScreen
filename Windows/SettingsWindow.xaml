<Window x:Class="SpotifyOnScreen.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Spotify On Screen - Settings"
        Height="650"
        Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Dark Mode Colors -->
        <SolidColorBrush x:Key="SpotifyGreen" Color="#1DB954"/>
        <SolidColorBrush x:Key="SpotifyGreenHover" Color="#1ED760"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#1E1E2E"/>
        <SolidColorBrush x:Key="SurfaceColor" Color="#2A2A3A"/>
        <SolidColorBrush x:Key="BorderColor" Color="#3E3E4E"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#A0A0B0"/>
        <SolidColorBrush x:Key="DangerColor" Color="#F87171"/>
        <SolidColorBrush x:Key="DangerHover" Color="#EF4444"/>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SpotifyGreen}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.15" Color="#000000"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource SpotifyGreenHover}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="{StaticResource SurfaceColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderBrush="{StaticResource BorderColor}"
                                BorderThickness="1"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#35354A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Danger Button Style -->
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="{StaticResource DangerColor}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.15" Color="#000000"/>
                            </Border.Effect>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource DangerHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource SurfaceColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="CaretBrush" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource SpotifyGreen}"/>
                            </Trigger>
                            <Trigger Property="IsReadOnly" Value="True">
                                <Setter Property="Background" Value="#1A1A26"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern CheckBox Style -->
        <Style x:Key="ModernCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Tab Control Style -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border"
                                Background="Transparent"
                                BorderThickness="0,0,0,2"
                                BorderBrush="Transparent"
                                Padding="20,12"
                                Margin="0,0,8,0">
                            <ContentPresenter x:Name="ContentSite"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            ContentSource="Header"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource SpotifyGreen}"/>
                                <Setter Property="Foreground" Value="{StaticResource SpotifyGreen}"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Hyperlink Style -->
        <Style TargetType="Hyperlink">
            <Setter Property="Foreground" Value="{StaticResource SpotifyGreen}"/>
            <Setter Property="TextDecorations" Value="None"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource SpotifyGreenHover}"/>
                    <Setter Property="TextDecorations" Value="Underline"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource SurfaceColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                          Background="{TemplateBinding Background}"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="{TemplateBinding BorderThickness}"
                                          Foreground="{TemplateBinding Foreground}"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          Focusable="False"
                                          ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="Border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="6">
                                            <Grid Margin="12,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="18"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0"
                                                                Content="{Binding SelectionBoxItem, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                                ContentTemplate="{Binding SelectionBoxItemTemplate, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                                VerticalAlignment="Center"
                                                                IsHitTestVisible="False"/>
                                                <Path Grid.Column="1"
                                                      Data="M0,0 L4,4 L8,0"
                                                      Stroke="#A0A0B0"
                                                      StrokeThickness="1.5"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      IsHitTestVisible="False"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="BorderBrush" Value="#1DB954"/>
                                            </Trigger>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="Border" Property="BorderBrush" Value="#1DB954"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <Popup x:Name="PART_Popup"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   Placement="Bottom"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Border Background="#2A2A3A"
                                        BorderBrush="#3E3E4E"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Padding="0,4">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="12" ShadowDepth="4" Opacity="0.5" Color="#000000"/>
                                    </Border.Effect>
                                    <ScrollViewer MaxHeight="220" VerticalScrollBarVisibility="Auto">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Foreground" Value="#E0E0E0"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Padding" Value="12,8"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border Background="{TemplateBinding Background}"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsHighlighted" Value="True">
                                            <Setter Property="Background" Value="#35354A"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Foreground" Value="#1DB954"/>
                                            <Setter Property="Background" Value="#25253A"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource BackgroundColor}" CornerRadius="12">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.5" Color="#000000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="#1A1A26" CornerRadius="12,12,0,0" Padding="24,16"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Ellipse Width="12" Height="12" Fill="{StaticResource SpotifyGreen}" Margin="0,0,10,0"/>
                        <TextBlock Text="Spotify On Screen - Settings"
                                 FontSize="20"
                                 FontWeight="Bold"
                                 Foreground="{StaticResource TextPrimary}"
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button Content="&#x2715;"
                          Click="CloseButton_Click"
                          HorizontalAlignment="Right"
                          Background="Transparent"
                          Foreground="{StaticResource TextPrimary}"
                          BorderThickness="0"
                          FontSize="20"
                          FontWeight="Bold"
                          Width="32"
                          Height="32"
                          Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                      CornerRadius="6"
                                      Width="{TemplateBinding Width}"
                                      Height="{TemplateBinding Height}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFFFFF15"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- Content Area -->
            <TabControl Grid.Row="1" Margin="24,24,24,12">
                <!-- Spotify Tab -->
                <TabItem Header="Spotify">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="0,20,0,0">
                            <TextBlock Text="Player mode"
                                     FontSize="16"
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource TextSecondary}"
                                     Margin="0,0,0,16"/>

                            <!-- Mode Selection -->
                            <Border Background="{StaticResource SurfaceColor}"
                                  CornerRadius="8"
                                  Padding="16"
                                  BorderBrush="{StaticResource BorderColor}"
                                  BorderThickness="1"
                                  Margin="0,0,0,24">
                                <StackPanel>
                                    <RadioButton IsChecked="{Binding IsLocalMode}"
                                               Foreground="{StaticResource TextPrimary}"
                                               FontSize="14"
                                               Margin="0,0,0,8"
                                               Cursor="Hand"
                                               GroupName="PlayerMode">
                                        <StackPanel>
                                            <TextBlock Text="Local mode (recommended)" FontWeight="Medium"/>
                                            <TextBlock Text="No setup needed. Reads from Spotify desktop app directly."
                                                     Foreground="{StaticResource TextSecondary}"
                                                     FontSize="12"/>
                                        </StackPanel>
                                    </RadioButton>
                                    <RadioButton IsChecked="{Binding IsWebApiMode}"
                                               Foreground="{StaticResource TextPrimary}"
                                               FontSize="14"
                                               Cursor="Hand"
                                               GroupName="PlayerMode">
                                        <StackPanel>
                                            <TextBlock Text="Web API mode" FontWeight="Medium"/>
                                            <TextBlock Text="Requires Spotify Premium + Client ID setup."
                                                     Foreground="{StaticResource TextSecondary}"
                                                     FontSize="12"/>
                                        </StackPanel>
                                    </RadioButton>
                                </StackPanel>
                            </Border>

                            <Border Background="#3E3E2E"
                                  CornerRadius="8"
                                  Padding="12"
                                  BorderBrush="#5E5E3E"
                                  BorderThickness="1"
                                  Margin="0,0,0,24">
                                <TextBlock Text="Changing the player mode requires restarting the app."
                                         FontStyle="Italic"
                                         Foreground="{StaticResource TextSecondary}"
                                         TextWrapping="Wrap"/>
                            </Border>

                            <!-- Web API Connection (only visible in WebApi mode) -->
                            <StackPanel Visibility="{Binding IsWebApiMode, Converter={StaticResource BoolToVis}}">
                                <TextBlock Text="Spotify connection"
                                         FontSize="16"
                                         FontWeight="SemiBold"
                                         Foreground="{StaticResource TextSecondary}"
                                         Margin="0,0,0,24"/>

                                <!-- Connection Status -->
                                <Border Background="{StaticResource SurfaceColor}"
                                      CornerRadius="8"
                                      Padding="16"
                                      BorderBrush="{StaticResource BorderColor}"
                                      BorderThickness="1"
                                      Margin="0,0,0,24">
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="10" Height="10" Margin="0,0,12,0">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Fill" Value="#F87171"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsAuthenticated}" Value="True">
                                                            <Setter Property="Fill" Value="#1DB954"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>
                                        <TextBlock Text="{Binding AuthenticationStatus}"
                                                 FontSize="14"
                                                 FontWeight="Medium"
                                                 Foreground="{StaticResource TextPrimary}"
                                                 VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- Client ID -->
                                <TextBlock Text="Client ID:" FontWeight="Medium" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,8"/>
                                <TextBox Text="{Binding Settings.Spotify.ClientId, UpdateSourceTrigger=PropertyChanged}"
                                       Style="{StaticResource ModernTextBox}"
                                       Margin="0,0,0,20"/>

                                <!-- Connect / Disconnect Buttons -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                                    <Button Content="Connect to Spotify"
                                          Command="{Binding ConnectSpotifyCommand}"
                                          Style="{StaticResource ModernButton}"
                                          Margin="0,0,12,0"/>
                                    <Button Content="Disconnect"
                                          Command="{Binding DisconnectSpotifyCommand}"
                                          Style="{StaticResource DangerButton}"
                                          Visibility="{Binding IsAuthenticated, Converter={StaticResource BoolToVis}}"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Display Options -->
                            <TextBlock Text="Display options"
                                     FontSize="16"
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource TextSecondary}"
                                     Margin="0,0,0,16"/>

                            <CheckBox Content="Show album art"
                                    IsChecked="{Binding Settings.Spotify.ShowAlbumArt}"
                                    Style="{StaticResource ModernCheckBox}"/>
                            <CheckBox Content="Show progress bar"
                                    IsChecked="{Binding Settings.Spotify.ShowProgressBar}"
                                    Style="{StaticResource ModernCheckBox}"/>
                            <CheckBox Content="Dynamic background (swirl album colors)"
                                    IsChecked="{Binding Settings.Appearance.DynamicBackground}"
                                    Style="{StaticResource ModernCheckBox}"/>
                            <CheckBox Content="Run at startup"
                                    IsChecked="{Binding Settings.RunAtStartup}"
                                    Style="{StaticResource ModernCheckBox}"/>
                            <CheckBox Content="Start minimized"
                                    IsChecked="{Binding Settings.StartMinimized}"
                                    Style="{StaticResource ModernCheckBox}"/>

                            <Button Content="Save Settings"
                                  Command="{Binding SaveCommand}"
                                  Style="{StaticResource ModernButton}"
                                  HorizontalAlignment="Left"
                                  Padding="24,12"/>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Appearance Tab -->
                <TabItem Header="Appearance">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="0,20,0,0">
                            <TextBlock Text="Overlay appearance"
                                     FontSize="16"
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource TextSecondary}"
                                     Margin="0,0,0,24"/>

                            <TextBlock Text="Font:" FontWeight="Medium" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,8"/>
                            <ComboBox ItemsSource="{Binding FontFamilies}"
                                      SelectedItem="{Binding Settings.Appearance.FontFamily, UpdateSourceTrigger=PropertyChanged}"
                                      Style="{StaticResource ModernComboBox}"
                                      Margin="0,0,0,16"/>

                            <TextBlock Text="Track Font Size:" FontWeight="Medium" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,8"/>
                            <TextBox Text="{Binding Settings.Appearance.TrackFontSize, UpdateSourceTrigger=PropertyChanged}"
                                   Style="{StaticResource ModernTextBox}"
                                   Margin="0,0,0,16"/>

                            <TextBlock Text="Artist Font Size:" FontWeight="Medium" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,8"/>
                            <TextBox Text="{Binding Settings.Appearance.ArtistFontSize, UpdateSourceTrigger=PropertyChanged}"
                                   Style="{StaticResource ModernTextBox}"
                                   Margin="0,0,0,16"/>

                            <TextBlock Text="Text Color (hex):" FontWeight="Medium" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,8"/>
                            <TextBox Text="{Binding Settings.Appearance.TextColor, UpdateSourceTrigger=PropertyChanged}"
                                   Style="{StaticResource ModernTextBox}"
                                   Margin="0,0,0,16"/>

                            <TextBlock Text="Secondary Text Color (hex):" FontWeight="Medium" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,8"/>
                            <TextBox Text="{Binding Settings.Appearance.SecondaryTextColor, UpdateSourceTrigger=PropertyChanged}"
                                   Style="{StaticResource ModernTextBox}"
                                   Margin="0,0,0,16"/>

                            <TextBlock Text="Accent Color (hex):" FontWeight="Medium" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,8"/>
                            <TextBox Text="{Binding Settings.Appearance.AccentColor, UpdateSourceTrigger=PropertyChanged}"
                                   Style="{StaticResource ModernTextBox}"
                                   Margin="0,0,0,16"/>

                            <TextBlock Text="Background Color (hex):" FontWeight="Medium" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,8"/>
                            <TextBox Text="{Binding Settings.Appearance.BackgroundColor, UpdateSourceTrigger=PropertyChanged}"
                                   Style="{StaticResource ModernTextBox}"
                                   Margin="0,0,0,16"/>

                            <DockPanel Margin="0,0,0,8">
                                <TextBlock Text="Background Opacity:" FontWeight="Medium" Foreground="{StaticResource TextPrimary}"/>
                                <TextBlock Text="{Binding Settings.Appearance.BackgroundOpacity, StringFormat={}{0:F2}}"
                                           Foreground="{StaticResource TextSecondary}" HorizontalAlignment="Right" DockPanel.Dock="Right"/>
                            </DockPanel>
                            <Slider Value="{Binding Settings.Appearance.BackgroundOpacity, UpdateSourceTrigger=PropertyChanged}"
                                    Minimum="0" Maximum="1"
                                    SmallChange="0.01" LargeChange="0.1"
                                    IsSnapToTickEnabled="False"
                                    Margin="0,0,0,16"/>

                            <TextBlock Text="Cover Art Size:" FontWeight="Medium" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,8"/>
                            <TextBox Text="{Binding Settings.Appearance.AlbumArtSize, UpdateSourceTrigger=PropertyChanged}"
                                   Style="{StaticResource ModernTextBox}"
                                   Margin="0,0,0,10"/>

                            <TextBlock Text="Cover art presets:"
                                     FontSize="12"
                                     Foreground="{StaticResource TextSecondary}"
                                     Margin="0,0,0,8"/>
                            <WrapPanel Margin="0,0,0,20">
                                <Button Content="Tiny (32)"
                                      Command="{Binding ApplyTinyArtCommand}"
                                      Style="{StaticResource SecondaryButton}"
                                      Padding="12,6"
                                      FontSize="12"
                                      Margin="0,0,8,8"/>
                                <Button Content="Small (48)"
                                      Command="{Binding ApplySmallArtCommand}"
                                      Style="{StaticResource SecondaryButton}"
                                      Padding="12,6"
                                      FontSize="12"
                                      Margin="0,0,8,8"/>
                                <Button Content="Default (64)"
                                      Command="{Binding ApplyDefaultArtCommand}"
                                      Style="{StaticResource SecondaryButton}"
                                      Padding="12,6"
                                      FontSize="12"
                                      Margin="0,0,8,8"/>
                                <Button Content="Large (80)"
                                      Command="{Binding ApplyLargeArtCommand}"
                                      Style="{StaticResource SecondaryButton}"
                                      Padding="12,6"
                                      FontSize="12"
                                      Margin="0,0,8,8"/>
                                <Button Content="XL (100)"
                                      Command="{Binding ApplyXLArtCommand}"
                                      Style="{StaticResource SecondaryButton}"
                                      Padding="12,6"
                                      FontSize="12"
                                      Margin="0,0,8,8"/>
                                <Button Content="XXL (128)"
                                      Command="{Binding ApplyXXLArtCommand}"
                                      Style="{StaticResource SecondaryButton}"
                                      Padding="12,6"
                                      FontSize="12"
                                      Margin="0,0,8,8"/>
                            </WrapPanel>

                            <TextBlock Text="Corner Radius:" FontWeight="Medium" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,8"/>
                            <TextBox Text="{Binding Settings.Appearance.CornerRadius, UpdateSourceTrigger=PropertyChanged}"
                                   Style="{StaticResource ModernTextBox}"
                                   Margin="0,0,0,24"/>

                            <Button Content="Save Appearance"
                                  Command="{Binding SaveCommand}"
                                  Style="{StaticResource ModernButton}"
                                  HorizontalAlignment="Left"
                                  Padding="24,12"/>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Position Tab -->
                <TabItem Header="Position">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="0,20,0,0">
                            <TextBlock Text="Overlay position"
                                     FontSize="16"
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource TextSecondary}"
                                     Margin="0,0,0,24"/>

                            <TextBlock Text="X Position:" FontWeight="Medium" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,8"/>
                            <TextBox Text="{Binding Settings.Position.X, UpdateSourceTrigger=PropertyChanged}"
                                   Style="{StaticResource ModernTextBox}"
                                   Margin="0,0,0,20"/>

                            <TextBlock Text="Y Position:" FontWeight="Medium" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,8"/>
                            <TextBox Text="{Binding Settings.Position.Y, UpdateSourceTrigger=PropertyChanged}"
                                   Style="{StaticResource ModernTextBox}"
                                   Margin="0,0,0,24"/>

                            <TextBlock Text="Overlay size"
                                     FontSize="16"
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource TextSecondary}"
                                     Margin="0,0,0,16"/>

                            <TextBlock Text="Width:" FontWeight="Medium" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,8"/>
                            <TextBox Text="{Binding Settings.Position.Width, UpdateSourceTrigger=PropertyChanged}"
                                   Style="{StaticResource ModernTextBox}"
                                   Margin="0,0,0,24"/>

                            <TextBlock Text="Presets"
                                     FontSize="16"
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource TextSecondary}"
                                     Margin="0,0,0,16"/>

                            <WrapPanel Margin="0,0,0,24">
                                <Button Content="Default (380 × auto)"
                                      Command="{Binding ApplyDefaultSizeCommand}"
                                      Style="{StaticResource SecondaryButton}"
                                      Margin="0,0,8,8"/>
                                <Button Content="Small (260 × auto)"
                                      Command="{Binding ApplySmallSizeCommand}"
                                      Style="{StaticResource SecondaryButton}"
                                      Margin="0,0,8,8"/>
                            </WrapPanel>

                            <Border Background="{StaticResource SurfaceColor}"
                                  CornerRadius="8"
                                  Padding="16"
                                  BorderBrush="{StaticResource BorderColor}"
                                  BorderThickness="1"
                                  Margin="0,0,0,24">
                                <StackPanel>
                                    <TextBlock Text="Tip: Hold Ctrl+Shift for 1 second to show the drag handle (move)."
                                             FontStyle="Italic"
                                             Foreground="{StaticResource TextSecondary}"
                                             TextWrapping="Wrap"
                                             Margin="0,0,0,6"/>
                                    <TextBlock Text="Hold Ctrl+Shift+Alt for 1 second to show the resize handle, then drag to resize."
                                             FontStyle="Italic"
                                             Foreground="{StaticResource TextSecondary}"
                                             TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <Button Content="Save Position &amp; Size"
                                  Command="{Binding SaveCommand}"
                                  Style="{StaticResource ModernButton}"
                                  HorizontalAlignment="Left"
                                  Padding="24,12"/>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Hotkeys Tab -->
                <TabItem Header="Hotkeys">
                    <StackPanel Margin="0,20,0,0">
                        <TextBlock Text="Global hotkey settings"
                                 FontSize="16"
                                 FontWeight="SemiBold"
                                 Foreground="{StaticResource TextSecondary}"
                                 Margin="0,0,0,24"/>

                        <TextBlock Text="Toggle Visibility:" FontWeight="Medium" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,8"/>
                        <TextBox Text="{Binding Settings.Hotkeys.ToggleVisibility}"
                               IsReadOnly="True"
                               Style="{StaticResource ModernTextBox}"
                               Margin="0,0,0,24"/>

                        <Button Content="Change Hotkeys"
                              Command="{Binding ReregisterHotkeysCommand}"
                              Style="{StaticResource SecondaryButton}"
                              HorizontalAlignment="Left"/>
                    </StackPanel>
                </TabItem>

                <!-- Updates Tab -->
                <TabItem Header="Updates">
                    <Grid>

                        <!-- ── MAIN VIEW (when NOT showing changelog) ── -->
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ScrollViewer.Style>
                                <Style TargetType="ScrollViewer">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ShowingChangelogView}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ScrollViewer.Style>
                            <StackPanel Margin="0,20,0,0">
                                <TextBlock Text="App updates"
                                         FontSize="16"
                                         FontWeight="SemiBold"
                                         Foreground="{StaticResource TextSecondary}"
                                         Margin="0,0,0,24"/>

                                <!-- Current Version -->
                                <Border Background="{StaticResource SurfaceColor}"
                                      CornerRadius="8"
                                      Padding="16"
                                      BorderBrush="{StaticResource BorderColor}"
                                      BorderThickness="1"
                                      Margin="0,0,0,16">
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="10" Height="10" Fill="{StaticResource SpotifyGreen}"
                                               Margin="0,0,12,0" VerticalAlignment="Center"/>
                                        <StackPanel>
                                            <TextBlock Text="Current version"
                                                     FontSize="12"
                                                     Foreground="{StaticResource TextSecondary}"/>
                                            <TextBlock Text="{Binding CurrentVersion}"
                                                     FontSize="22"
                                                     FontWeight="Bold"
                                                     Foreground="{StaticResource TextPrimary}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <!-- Update Status badge (shown after checking) -->
                                <Border Background="{Binding UpdateStatusColor}"
                                      CornerRadius="8"
                                      Padding="16"
                                      Margin="0,0,0,16"
                                      Visibility="{Binding HasCheckedForUpdates, Converter={StaticResource BoolToVis}}">
                                    <TextBlock Text="{Binding UpdateStatusText}"
                                             FontSize="14"
                                             FontWeight="Medium"
                                             Foreground="White"
                                             TextWrapping="Wrap"/>
                                </Border>

                                <!-- Action Buttons -->
                                <WrapPanel Margin="0,8,0,0">
                                    <Button Content="Check for Updates"
                                          Command="{Binding CheckForUpdatesCommand}"
                                          Style="{StaticResource SecondaryButton}"
                                          Margin="0,0,12,12"/>
                                    <Button Content="Download &amp; Install"
                                          Command="{Binding DownloadUpdateCommand}"
                                          Style="{StaticResource ModernButton}"
                                          Margin="0,0,12,12"
                                          Visibility="{Binding IsUpdateAvailable, Converter={StaticResource BoolToVis}}"/>
                                    <Button Content="View on GitHub"
                                          Command="{Binding OpenGitHubCommand}"
                                          Style="{StaticResource SecondaryButton}"
                                          Margin="0,0,0,12"/>
                                </WrapPanel>
                            </StackPanel>
                        </ScrollViewer>

                        <!-- ── CHANGELOG VIEW (when showing changelog) ── -->
                        <Grid Visibility="{Binding ShowingChangelogView, Converter={StaticResource BoolToVis}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Back button + header -->
                            <StackPanel Grid.Row="0" Margin="0,20,0,16">
                                <Button Command="{Binding BackFromChangelogCommand}"
                                      Style="{StaticResource SecondaryButton}"
                                      HorizontalAlignment="Left"
                                      Padding="14,8"
                                      Margin="0,0,0,16">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#x2190;" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="Back to Updates" FontSize="13" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                                <TextBlock FontSize="16" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}">
                                    <Run Text="Version"/>
                                    <Run Text="{Binding LatestVersion, Mode=OneWay}" Foreground="{StaticResource SpotifyGreen}"/>
                                    <Run Text="is ready to install"/>
                                </TextBlock>
                            </StackPanel>

                            <!-- Changelog text -->
                            <Border Grid.Row="1"
                                  Background="{StaticResource SurfaceColor}"
                                  CornerRadius="8"
                                  BorderBrush="{StaticResource BorderColor}"
                                  BorderThickness="1"
                                  Padding="16"
                                  Margin="0,0,0,16">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0"
                                             Text="What's New:"
                                             FontSize="13"
                                             FontWeight="SemiBold"
                                             Foreground="{StaticResource TextSecondary}"
                                             Margin="0,0,0,10"/>
                                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                        <TextBlock Text="{Binding Changelog}"
                                                 TextWrapping="Wrap"
                                                 FontFamily="Consolas"
                                                 FontSize="13"
                                                 Foreground="{StaticResource TextPrimary}"
                                                 LineHeight="22"/>
                                    </ScrollViewer>
                                </Grid>
                            </Border>

                            <!-- Bottom: progress OR buttons -->
                            <StackPanel Grid.Row="2" Margin="0,0,0,4">

                                <!-- Download progress (when downloading) -->
                                <StackPanel Visibility="{Binding IsDownloading, Converter={StaticResource BoolToVis}}"
                                          Margin="0,0,0,12">
                                    <TextBlock Text="Downloading update..."
                                             FontSize="13"
                                             FontWeight="Medium"
                                             Foreground="{StaticResource TextPrimary}"
                                             Margin="0,0,0,8"/>
                                    <ProgressBar Value="{Binding DownloadProgress}"
                                               Maximum="100"
                                               Height="8"
                                               Foreground="{StaticResource SpotifyGreen}"/>
                                    <TextBlock Text="{Binding DownloadProgress, StringFormat={}{0}%}"
                                             FontSize="12"
                                             Foreground="{StaticResource TextSecondary}"
                                             HorizontalAlignment="Center"
                                             Margin="0,6,0,0"/>
                                </StackPanel>

                                <!-- Action buttons (hidden while downloading) -->
                                <WrapPanel HorizontalAlignment="Right">
                                    <WrapPanel.Style>
                                        <Style TargetType="WrapPanel">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsDownloading}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </WrapPanel.Style>
                                    <Button Content="Cancel"
                                          Command="{Binding BackFromChangelogCommand}"
                                          Style="{StaticResource SecondaryButton}"
                                          Margin="0,0,12,0"/>
                                    <Button Content="Download &amp; Install"
                                          Command="{Binding AcceptInstallationCommand}"
                                          Style="{StaticResource ModernButton}"/>
                                </WrapPanel>
                            </StackPanel>
                        </Grid>

                    </Grid>
                </TabItem>

                <!-- About Tab -->
                <TabItem Header="About">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="0,20,0,0">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <Ellipse Width="16" Height="16" Fill="{StaticResource SpotifyGreen}" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Spotify On Screen"
                                         FontSize="24"
                                         FontWeight="Bold"
                                         Foreground="{StaticResource SpotifyGreen}"/>
                            </StackPanel>
                            <TextBlock Text="An always-on-top overlay showing what you're listening to on Spotify."
                                     FontSize="14"
                                     Foreground="{StaticResource TextSecondary}"
                                     Margin="0,0,0,8"/>
                            <TextBlock Text="Local mode works out of the box — no setup needed. Just play music in Spotify!"
                                     FontSize="14"
                                     Foreground="{StaticResource SpotifyGreen}"
                                     FontWeight="Medium"
                                     Margin="0,0,0,32"/>

                            <Border Background="{StaticResource SurfaceColor}"
                                  CornerRadius="8"
                                  Padding="20"
                                  BorderBrush="{StaticResource BorderColor}"
                                  BorderThickness="1"
                                  Margin="0,0,0,24">
                                <StackPanel>
                                    <TextBlock Text="How to set up:"
                                             FontWeight="SemiBold"
                                             FontSize="16"
                                             Foreground="{StaticResource TextPrimary}"
                                             Margin="0,0,0,16"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <Border Background="{StaticResource SpotifyGreen}"
                                              Width="24" Height="24"
                                              CornerRadius="12"
                                              Margin="0,0,12,0">
                                            <TextBlock Text="1" Foreground="White"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                     FontWeight="Bold"/>
                                        </Border>
                                        <TextBlock VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}" TextWrapping="Wrap">
                                            <Run Text="Go to "/>
                                            <Hyperlink NavigateUri="https://developer.spotify.com/dashboard" RequestNavigate="Hyperlink_RequestNavigate">
                                                <Run Text="developer.spotify.com/dashboard"/>
                                            </Hyperlink>
                                            <Run Text=" and log in"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <Border Background="{StaticResource SpotifyGreen}"
                                              Width="24" Height="24"
                                              CornerRadius="12"
                                              Margin="0,0,12,0">
                                            <TextBlock Text="2" Foreground="White"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                     FontWeight="Bold"/>
                                        </Border>
                                        <TextBlock Text="Create a new app (any name, any description)"
                                                 VerticalAlignment="Center"
                                                 Foreground="{StaticResource TextPrimary}"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <Border Background="{StaticResource SpotifyGreen}"
                                              Width="24" Height="24"
                                              CornerRadius="12"
                                              Margin="0,0,12,0">
                                            <TextBlock Text="3" Foreground="White"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                     FontWeight="Bold"/>
                                        </Border>
                                        <TextBlock VerticalAlignment="Center" Foreground="{StaticResource TextPrimary}" TextWrapping="Wrap">
                                            <Run Text="In app settings, add redirect URI: "/>
                                            <Run Text="http://127.0.0.1:4202" Foreground="{StaticResource SpotifyGreen}" FontWeight="Medium"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <Border Background="{StaticResource SpotifyGreen}"
                                              Width="24" Height="24"
                                              CornerRadius="12"
                                              Margin="0,0,12,0">
                                            <TextBlock Text="4" Foreground="White"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                     FontWeight="Bold"/>
                                        </Border>
                                        <TextBlock Text="Copy the Client ID and paste it in the Spotify tab"
                                                 VerticalAlignment="Center"
                                                 Foreground="{StaticResource TextPrimary}"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <Border Background="{StaticResource SpotifyGreen}"
                                              Width="24" Height="24"
                                              CornerRadius="12"
                                              Margin="0,0,12,0">
                                            <TextBlock Text="5" Foreground="White"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                     FontWeight="Bold"/>
                                        </Border>
                                        <TextBlock Text="Click 'Connect to Spotify' and authorize the app"
                                                 VerticalAlignment="Center"
                                                 Foreground="{StaticResource TextPrimary}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <Border Background="#3E3E2E"
                                  CornerRadius="8"
                                  Padding="16"
                                  BorderBrush="#5E5E3E"
                                  BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Settings file location:"
                                             FontWeight="SemiBold"
                                             Foreground="{StaticResource TextPrimary}"
                                             Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding SettingsPath}"
                                             TextWrapping="Wrap"
                                             Foreground="{StaticResource TextSecondary}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </Grid>
    </Border>
</Window>
