<Window x:Class="SpotifyOnScreen.Windows.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Spotify On Screen"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        WindowStyle="None"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        SizeToContent="Height"
        WindowStartupLocation="Manual"
        Focusable="True">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid x:Name="MainGrid">
        <!-- Single clipped container: everything lives in here with rounded corners -->
        <Grid x:Name="ClippedContainer" SizeChanged="ClippedContainer_SizeChanged">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.4" Color="#000000"/>
            </Grid.Effect>

            <!-- Static background (visible when dynamic is OFF) -->
            <Border x:Name="StaticBgBorder"
                    Background="{Binding BackgroundBrush}"/>

            <!-- Dynamic tornado background (visible when dynamic is ON) -->
            <Grid x:Name="DynamicBgGrid" Visibility="Collapsed">
                <Border x:Name="DynamicBaseBorder" Background="#CC000000"/>
                <Canvas x:Name="TornadoCanvas">
                    <Canvas.Effect>
                        <BlurEffect Radius="50"/>
                    </Canvas.Effect>
                </Canvas>
                <Border x:Name="DynamicDarkOverlay" Background="#40000000"/>
            </Grid>

            <!-- Content -->
            <Border Padding="{Binding Padding}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Album Art -->
                    <Border Grid.Column="0" Grid.RowSpan="3"
                            Width="{Binding AlbumArtSize}"
                            Height="{Binding AlbumArtSize}"
                            CornerRadius="8"
                            Margin="0,0,12,0"
                            Visibility="{Binding ShowAlbumArt, Converter={StaticResource BoolToVis}}">
                        <Border.Background>
                            <ImageBrush ImageSource="{Binding AlbumArt}"
                                        Stretch="UniformToFill"/>
                        </Border.Background>
                    </Border>

                    <!-- Track Name -->
                    <TextBlock Grid.Column="1" Grid.Row="0"
                               Text="{Binding TrackName}"
                               Foreground="{Binding TextBrush}"
                               FontFamily="{Binding FontFamily}"
                               FontSize="{Binding TrackFontSize}"
                               FontWeight="SemiBold"
                               TextTrimming="CharacterEllipsis"
                               VerticalAlignment="Bottom"
                               Margin="0,0,0,2"/>

                    <!-- Artist Name -->
                    <TextBlock Grid.Column="1" Grid.Row="1"
                               Text="{Binding ArtistName}"
                               Foreground="{Binding SecondaryTextBrush}"
                               FontFamily="{Binding FontFamily}"
                               FontSize="{Binding ArtistFontSize}"
                               TextTrimming="CharacterEllipsis"
                               VerticalAlignment="Top"/>

                    <!-- Album Name -->
                    <TextBlock Grid.Column="1" Grid.Row="2"
                               Text="{Binding AlbumName}"
                               Foreground="{Binding SecondaryTextBrush}"
                               FontFamily="{Binding FontFamily}"
                               FontSize="11"
                               Opacity="0.7"
                               TextTrimming="CharacterEllipsis"
                               VerticalAlignment="Top"/>

                    <!-- Progress Bar -->
                    <Grid Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="3"
                          Margin="0,8,0,0"
                          Height="3"
                          Visibility="{Binding ShowProgressBar, Converter={StaticResource BoolToVis}}">
                        <Border Background="#30FFFFFF" CornerRadius="1.5"/>
                        <Border x:Name="ProgressFill"
                                Background="{Binding ProgressBarBrush}"
                                Effect="{Binding ProgressBarEffect}"
                                CornerRadius="1.5"
                                HorizontalAlignment="Stretch"
                                RenderTransformOrigin="0,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="ProgressScale" ScaleX="0"/>
                            </Border.RenderTransform>
                        </Border>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- Interactive overlay (covers entire window for drag when Ctrl+Shift held) -->
        <Border x:Name="InteractiveOverlay"
                Background="#01000000"
                Visibility="Collapsed"
                MouseLeftButtonDown="DragHandle_MouseLeftButtonDown"
                Cursor="SizeAll"/>

        <!-- Drag Handle in Bottom Right Corner (Ctrl+Shift) -->
        <Border x:Name="DragHandle"
                Width="20"
                Height="20"
                Background="#40808080"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Visibility="Collapsed"
                MouseLeftButtonDown="DragHandle_MouseLeftButtonDown"
                Cursor="SizeAll">
            <Path Data="M0,10 L10,0 M4,10 L10,4 M8,10 L10,8"
                  Stroke="White"
                  StrokeThickness="2"
                  Stretch="Uniform"
                  Margin="4"
                  IsHitTestVisible="False"/>
        </Border>

        <!-- Resize Handle in Bottom Right Corner (Ctrl+Shift+Alt) -->
        <Border x:Name="ResizeHandle"
                Width="20"
                Height="20"
                Background="#4000CCCC"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Visibility="Collapsed"
                Cursor="SizeNWSE"
                MouseLeftButtonDown="ResizeHandle_MouseLeftButtonDown"
                MouseMove="ResizeHandle_MouseMove"
                MouseLeftButtonUp="ResizeHandle_MouseLeftButtonUp">
            <Path Data="M2,10 L10,2 M5,10 L10,5 M8,10 L10,8"
                  Stroke="Cyan"
                  StrokeThickness="1.5"
                  Stretch="Uniform"
                  Margin="3"
                  IsHitTestVisible="False"/>
        </Border>
    </Grid>
</Window>
